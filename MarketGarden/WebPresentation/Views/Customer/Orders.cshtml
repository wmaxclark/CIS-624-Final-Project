@model IEnumerable<DataObjects.Order>

@{
    ViewBag.Title = "My Orders";
}

<h2>My Orders</h2>
@if (ViewBag.Success == true)
{
    <h3 class="text-success">Order Placed!</h3>
}
@if (ViewBag.Sucess == false)
{
    <h3 class="text-danger">Something went wrong ordering.</h3>
}
@if (Model.Count() > 0)
{
    <table class="table">
        <tr>

            <th>
                Order Date
            </th>
            <th>
                Total Charged
            </th>
            <th></th>
        </tr>
        @foreach (var order in Model)
        {
            <tr>
                <td>
                    @order.OrderDate.ToShortDateString()
                </td>
                <td>
                    $@order.Lines.Sum(l => l.PriceCharged).ToString()
                </td>
            </tr>
        }
        </table>
    }
        
